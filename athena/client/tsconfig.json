{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@typeforge/types": ["../types/index.ts"],
      "@typeforge/types/*": ["../types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
